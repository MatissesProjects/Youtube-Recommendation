{
  "manifest_version": 3,
  "name": "The Curator - YouTube Recommendation",
  "version": "1.0.0",
  "description": "A local-first YouTube recommendation engine based on loyalty.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://www.youtube.com/feeds/videos.xml*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://www.youtube.com/feed/history*"],
      "js": ["historyScraper.js"]
    },
    {
      "matches": ["https://www.youtube.com/*/channels*"],
      "js": ["discoveryScraper.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
